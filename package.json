{
    "name": "frontify-plugin",
    "description": "Connecting your brand and design worlds",
    "version": "2.3.12",
    "repository": {
        "type": "git",
        "url": "https://github.com/Frontify/sketch.git"
    },
    "engines": {
        "sketch": ">=3.0"
    },
    "skpm": {
        "name": "frontify-plugin",
        "manifest": "src/manifest.json",
        "main": "frontify.sketchplugin"
    },
    "scripts": {
        "build": "NODE_ENV=production skpm-build && vite --emptyOutDir --config vite.config.js build src/frontend --base=./",
        "buildwatch": "skpm-build && vite --watch --emptyOutDir --config vite.config.js build src/frontend --base=./",
        "cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost'",
        "dev": "vite serve src/frontend",
        "postinstall": "npm run build && skpm-link",
        "start": "skpm-build --watch --run",
        "watch": "NODE_ENV=development skpm-build --watch"
    },
    "devDependencies": {
        "@babel/plugin-syntax-async-generators": "^7.8.4",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@skpm/extract-loader": "^2.0.2",
        "@vitejs/plugin-react": "^1.0.7",
        "copy-webpack-plugin": "^5.1.2",
        "css-loader": "^3.2.0",
        "dot-tpl-loader": "^1.2.1",
        "file-loader": "^1.1.11",
        "html-loader": "^0.5.5",
        "regexp-replace-loader": "^1.0.1",
        "style-loader": "^0.19.1",
        "vite": "^2.7.2",
        "webpack-concat-plugin": "^3.0.0"
    },
    "resources": [
        "src/assets/js/*.js"
    ],
    "dependencies": {
        "@babel/runtime": "^7.11.2",
        "@frontify/arcade": "^1.0.0",
        "@frontify/frontify-authenticator": "^2.0.0",
        "@skpm/builder": "^0.7.7",
        "@skpm/child_process": "^0.4.1",
        "@vitejs/plugin-legacy": "^1.6.4",
        "create-hash": "^1.2.0",
        "mocha-js-delegate": "^0.2.0",
        "random-bytes": "^1.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "sketch-module-web-view": "^3.5.1"
    }
}
