{
  "name": "Frontify",
  "compatibleVersion": 3,
  "identifier": "com.frontify.sketch-plugin",
  "description": "Connect your Frontify account to Sketch.",
  "bundleVersion": 2,
  "authorEmail": "hello@frontify.com",
  "author": "Frontify AG",
  "commands": [
    {
      "name": "Frontify",
      "identifier": "frontify",
      "script": "./commands/frontify.js",
      "shortcut": "ctrl shift f",
      "handler": "runCommand"
    },
    {
      "name": "Open",
      "identifier": "open",
      "script": "./commands/frontify.js",
      "handlers": {
        "actions": {
          "OpenDocument": "openCommand"
        }
      }
    },
    {
      "name": "Close",
      "identifier": "close",
      "script": "./commands/frontify.js",
      "handlers": {
        "actions": {
          "CloseDocument": "closeCommand"
        }
      }
    },
    {
      "name": "Saved",
      "identifier": "saved",
      "script": "./commands/frontify.js",
      "handlers": {
        "actions": {
          "DocumentSaved": "savedCommand"
        }
      }
    },
    {
      "name": "SelectionChanged",
      "identifier": "selectionchanged",
      "script": "./commands/frontify.js",
      "handlers": {
        "actions": {
          "SelectionChanged.finish": "selectionCommand"
        }
      }
    },
    {
      "name": "StartUp",
      "identifier": "startup",
      "script": "./commands/startup.js",
      "handlers": {
        "actions": {
          "Startup": "onRun"
        }
      }
    }
  ],
  "menu": {
    "items": [
      "frontify"
    ],
    "isRoot": true
  }
}